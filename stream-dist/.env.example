# Database Configuration
DATABASE_URL=sqlite:////data/stream_manager.db
# For PostgreSQL: postgresql://user:password@postgres:5432/streamdb

# Security
SECRET_KEY=change-this-secret-key-in-production-use-strong-random-value
API_KEY=your-secret-api-key-change-in-production

# MediaMTX
MEDIAMTX_CONFIG_PATH=/config/mediamtx.yml
MEDIAMTX_API_URL=http://mediamtx:9997
MTX_LOGLEVEL=info

# Application
LOG_LEVEL=INFO
PORT=8080
DEBUG=false

# Port Ranges
UDP_PORT_RANGE_START=5000
UDP_PORT_RANGE_END=5100
SRT_PORT_RANGE_START=8890
SRT_PORT_RANGE_END=8990

# FFmpeg Settings
DEFAULT_RECONNECT_DELAY=5
MAX_RECONNECT_ATTEMPTS=0
MAX_OUTPUTS_PER_INPUT=20

# PostgreSQL (if using)
POSTGRES_USER=streamuser
POSTGRES_PASSWORD=changeme
POSTGRES_DB=streamdb